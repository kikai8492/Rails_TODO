<h1>ユーザー編集画面<h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "件") %> のエラーがあるためセーブできませんでした。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, url:admin_user_path, local: true) do |f|%> 

  <%= f.label :name%>
  <%= f.text_field :name %>

  <%= f.label :email%>
  <%= f.email_field :email%>

  <%= f.label :password%>
  <%= f.password_field :password%>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :admin%>
  <%= f.check_box :admin%>

  <%= f.submit "アカウントを作成する" %>

<% end %>